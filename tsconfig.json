{
  "include": [
    "./src/**.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "DOM",
      "ES6"
    ],
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true
  }
}